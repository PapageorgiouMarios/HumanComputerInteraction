<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="20dp">

    <TextView
        android:id="@+id/who_to_call_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marios"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        tools:ignore="HardcodedText">
    </TextView>

    <TextView
        android:id="@+id/who_to_call_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/who_to_call_first_name"
        android:text="Papageorge"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        tools:ignore="HardcodedText">
    </TextView>

    <Button
        android:id="@+id/who_to_call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Call"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#24A329">
    </Button>

</RelativeLayout>