<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".FillStatusActivity">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15sp"
        android:layout_marginStart="30dp"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/language_button"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/english"
        tools:ignore="ContentDescription">
    </ImageButton>

    <TextView
        android:id="@+id/change_language_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/language_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:textColor="@color/white"
        android:text="Change to Greek"
        android:textSize="20sp"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/bigImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/language_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/my_info"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/first_name_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bigImage"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Type first name here"
        tools:ignore="HardcodedText">
    </com.google.android.material.textfield.TextInputEditText>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/last_name_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_name_textfield"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Type last name here"
        tools:ignore="HardcodedText">
    </com.google.android.material.textfield.TextInputEditText>

    <TextView
        android:id="@+id/my_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_name_textfield"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="My phone number"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="#333333"
        android:padding="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        tools:ignore="HardcodedText"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_number"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Type address with number here"
        tools:ignore="HardcodedText">
    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/mail_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Type mail code here"
        tools:ignore="HardcodedText">
    </com.google.android.material.textfield.TextInputEditText>

    <Button
        android:id="@+id/check_proceed"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/mail_code"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:text="Check and Proceed"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />


</RelativeLayout>