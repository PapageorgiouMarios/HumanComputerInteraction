<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">

    <ImageView
        android:id="@+id/emergency_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:src="@drawable/emergency_example"
        android:background="@color/black"
        tools:ignore="ContentDescription">
    </ImageView>

    <TextView
        android:id="@+id/emergency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="120dp"
        android:text="Κέντρο Δηλητηριάσεων"
        android:textColor="@color/white"
        android:textSize="23sp"
        tools:ignore="HardcodedText">
    </TextView>

    <TextView
        android:id="@+id/emergency_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_below="@id/emergency_name"
        android:text="2107793777"
        android:textColor="@color/white"
        android:textSize="23sp"
        tools:ignore="HardcodedText">
    </TextView>

    <Button
        android:id="@+id/call_emergency_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergency_number"
        android:layout_toEndOf="@id/emergency_pic"
        android:text="Call"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:backgroundTint="#FF0000">
    </Button>

</RelativeLayout>